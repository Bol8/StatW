                <th>@Html.DisplayNameFor(x => x.Points)</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(x => item.Team)</th>
                    <th>@Html.DisplayFor(x => item.MatchesPlayed)</th>
                    <th>@Html.DisplayFor(x => item.Wins)</th>
                    <th>@Html.DisplayFor(x => item.Draws)</th>
                    <th>@Html.DisplayFor(x => item.Loses)</th>
                    <th>@Html.DisplayFor(x => item.PercentWins) %</th>
                    <th>@Html.DisplayFor(x => item.PercentDraws) %</th>
                    <th>@Html.DisplayFor(x => item.PercentLoses) %</th>
                    <th>@Html.DisplayFor(x => item.Points)</th>
                    <td>
                        @*@Html.ActionLink("Details", "Details", new { team = item.Team }) |*@
